{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "outDir": "lib"
  },
  "compileOnSave": true
}
