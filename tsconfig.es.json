{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "outDir": "es"
  },
  "include": [
    "lib",
    "react.ts",
    "helper.ts",
    "utils.ts"
  ],
  "exclude": [
    "scripts",
    "test"
  ],
  "compileOnSave": true
}
